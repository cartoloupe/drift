<h1>Foods#index</h1>
<p>Find me in app/views/foods/index.html.erb</p>

<table class="table table-condensed table-bordered table-striped">
  <thead>
    <tr>
      <th>
        Food Name
      </th>
      <th>
        Cost
      </th>
    </tr>
  </thead>
  <tbody>
    <% @food.each do |f| %>
      <tr>
        <td>
          <%= f.name %>
        </td>
        <td>
          <%= f.cost %>
        </td>
      </tr>
    <% end %>
  </tbody>

</table>

<label>Total: <%= @total %></label>
