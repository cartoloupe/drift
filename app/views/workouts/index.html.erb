<p id="notice"><%= notice %></p>

<h1>Listing Workouts</h1>
<%= link_to 'New Workout', new_workout_path, class: 'btn btn-lg' %>

<table class="table table-condensed table-bordered table-striped">
  <thead>
    <tr>
      <th>Date</th>
      <th>Name</th>
      <th>Duration</th>
      <th>Reps</th>
      <th>Sets</th>
      <th>Weight</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @workouts.each do |workout| %>
      <tr>
        <td><%= workout.created_at.strftime("%Y-%m-%d") %></td>
        <td><%= workout.name %></td>
        <td><%= workout.duration %></td>
        <td><%= workout.reps %></td>
        <td><%= workout.sets %></td>
        <td><%= workout.weight %></td>
        <td><%= link_to 'Show', workout %></td>
        <td><%= link_to 'Edit', edit_workout_path(workout) %></td>
        <td><%= link_to 'Destroy', workout, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<h1>Trends</h1>
<ul class="nav nav-tabs">
  <% @trend_list.each_with_index do |workout, index| %>
    <li class="<%= 'active' if index == 0 %>">
      <%= link_to workout, trends_path(workout.gsub(" ", "_")), remote: true %>
    </li>
  <% end %>
</ul>
<div class="results"></div>
